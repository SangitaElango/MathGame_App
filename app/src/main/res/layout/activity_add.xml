<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_addpage"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="4"
            android:text="Score:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewScoreLive"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:hint="score"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewLife"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="4"
            android:text="Life:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewLifeLive"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:hint="life"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="4"
            android:text="Time:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewTimeLive"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:hint="time"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewQuest"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="70dp"
        android:background="#C47CF0"
        android:gravity="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextAns"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="70dp"
        android:background="#C47CF0"
        android:ems="10"
        android:gravity="center"
        android:hint="Write your answer here"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Ok"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonNextQuest"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Next Question"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>